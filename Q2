#include<iostream>
using namespace std;

int main()
{
    int n;
    cout<<"Enter a year to be tested if it is leap or not:"<<" ";
    cin>>n;

    if (n%400==0)
    {
        cout<<"Entered year is a leap year!";
    }

    else if (n%100==0)
    {
        cout<<"Nope, entered year is not a leap year";
    }

    else if (n%4==0)
    {
        cout<<"Entered year is a leap year!";
    }

    else
    {
        cout<<"Nope, entered year is not a leap year";
    }

    return 0;
}
